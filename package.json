{
  "name": "kmeter",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "",
  "scripts": {
    "dev:js": "uglifyjs 'node_modules/raphael/node_modules/eve/eve.js' 'node_modules/raphael/raphael.js' 'node_modules/justgage/justgage.js' 'src/js/main.js' --output public/app.js --beautify --source-map public/app.js,map",
    "build:js": "uglifyjs 'node_modules/raphael/node_modules/eve/eve.js' 'node_modules/raphael/raphael.js' 'node_modules/justgage/justgage.js' 'src/js/main.js' --output public/app.js",
    "watch:scss": "nodemon -e scss -x \"npm run build:css\"",
    "dev:css": "node-sass src/sass/main.scss public/app.css --source-map=true",
    "build:css": "node-sass src/sass/main.scss public/app.css --output-style=compressed",
    "postcss": "postcss --use autoprefixer -r public/app.css",
    "build:img": "imagemin src/img/* --out-dir=public/img",
    "dev:html": "cpx \"src/index.html\" public -w -v",
    "build:html": "cpx \"src/index.html\" public",
    "server": "live-server --host=localhost --open=public",
    "clean": "rm -rf public & mkdirp 'public'",
    "dev": "npm run clean & npm run dev:html & npm run build:img & npm run dev:css & npm run postcss & npm run dev:js & npm run server",
    "build": "npm run clean & npm run build:html & npm run build:img & npm run build:css & npm run postcss & npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://jeromelachaud@github.com/mobitroll/kmeter.git"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "eve": "^0.5.0",
    "imagemin-cli": "^3.0.0",
    "justgage": "^1.2.2",
    "live-server": "^0.9.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "postcss-cli": "^2.5.2",
    "raphael": "^2.2.1",
    "uglifyjs": "^2.4.10"
  }
}
