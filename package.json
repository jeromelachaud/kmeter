{
  "name": "kmeter",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "",
  "scripts": {
    "build:js": "concat-cli -f 'node_modules/raphael/node_modules/eve/eve.js' 'node_modules/raphael/raphael.js' 'node_modules/justgage/justgage.js' 'src/js/main.js' -o public/app.js",
    "watch:scss": "nodemon -e scss -x \"npm run build:css\"",
    "build:css": "node-sass src/sass/main.scss public/app.css --source-map=true",
    "postbuild:css": "postcss --use autoprefixer -r public/app.css",
    "build:img": "imagemin src/img/* --out-dir=public/img",
    "server": "live-server --host=localhost",
    "prestart": "rm -rf public & mkdirp 'public'",
    "start": "npm run build:img & npm run watch:scss & npm run build:js & npm run server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://jeromelachaud@github.com/mobitroll/kmeter.git"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "concat-cli": "^4.0.0",
    "eve": "^0.5.0",
    "imagemin-cli": "^3.0.0",
    "justgage": "^1.2.2",
    "live-server": "^0.9.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "postcss-cli": "^2.5.2",
    "raphael": "^2.2.1"
  }
}
